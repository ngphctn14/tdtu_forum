@model WebApplication2.Models.post

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<style>
    .panel-default {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 20px;
    }

    .panel-heading {
        font-size: 1.5rem;
        padding: 15px;
    }

    .dl-horizontal dt {
        font-weight: bold;
    }

    .dl-horizontal dd {
        font-size: 1.2rem;
        color: #555;
    }

    .btn-lg {
        padding: 12px 20px;
        font-size: 1.2rem;
    }

    .text-center {
        text-align: center;
    }

    .mt-4 {
        margin-top: 1.5rem;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }

</style>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary shadow-sm">
            <div class="panel-heading bg-primary text-white">
                <h4 class="m-0 text-center"><strong>Chi tiết Bài Đăng</strong></h4>
            </div>
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        <strong>Tiêu đề</strong>
                    </dt>
                    <dd class="mb-3">
                        @Html.DisplayFor(model => model.title)
                    </dd>

                    <dt>
                        <strong>Ngày đăng</strong>
                    </dt>
                    <dd class="mb-3">
                        @Html.DisplayFor(model => model.created_at)
                    </dd>

                    <dt>
                        <strong>Nội dung</strong>
                    </dt>
                    <dd class="mb-3">
                        @Html.Raw(Model.content)
                    </dd>

                    <dt>
                        <strong>Thể loại</strong>
                    </dt>
                    <dd class="mb-3">
                        @Html.DisplayFor(model => model.category.name)
                    </dd>

                    <dt>
                        <strong>Người đăng</strong>
                    </dt>
                    <dd class="mb-3">
                        @Html.DisplayFor(model => model.user.full_name)
                    </dd>
                </dl>

                <div class="text-center mt-4">
                    <a href="@Url.Action("Edit", "posts", new { id = Model.post_id })" class="btn btn-warning btn-lg mx-2">
                        <i class="fa fa-edit"></i> Chỉnh sửa
                    </a>
                    <a href="@Url.Action("Index", "posts")" class="btn btn-secondary btn-lg mx-2">
                        <i class="fa fa-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
