@model IEnumerable<WebApplication2.Models.post>


<table class="table table-striped table-hover table-bordered pt-5" id="dataTables-example" style="width:100%">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Date of post</th>
            <th>Content</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ var Number = 1; }
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.Raw(Number++)</td>
                <td>@Html.DisplayFor(modelItem => item.title)</td>
                <td>@Html.DisplayFor(modelItem => item.created_at)</td>
                <td>@Html.Raw(item.content.Length > 100 ? item.content.Substring(0, 48) + "..." : item.content)</td>
                <td>@Html.DisplayFor(modelItem => item.user.full_name)</td>
                <td class="text-center">
                    @*@Html.ActionLink("Sửa", "Edit", new { id = item.post_id }, new { @class = "btn btn-warning btn-sm mx-1" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.post_id }, new { @class = "btn btn-info btn-sm mx-1" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.post_id }, new { @class = "btn btn-danger btn-sm mx-1" })*@

                    <a href="@Url.Action("Edit", "posts", new { id = item.post_id })" class="btn btn-default" , style="font-size: 10px; padding: 5px 10px;" }>
                        <span class='glyphicon glyphicon-pencil'></span>
                    </a>
                    <a href="@Url.Action("Details", "posts", new { id = item.post_id })" class="btn btn-primary" , style="font-size: 10px; padding: 5px 10px;" }>
                        <span class='glyphicon glyphicon-zoom-in'></span>
                    </a>
                    <a href="@Url.Action("Delete", "posts", new { id = item.post_id })" class="btn btn-danger" , style="font-size: 10px; padding: 5px 10px;" }>
                        <span class='glyphicon glyphicon-trash'></span>
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>