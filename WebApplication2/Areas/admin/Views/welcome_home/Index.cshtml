@model IEnumerable<WebApplication2.Models.welcome_home>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@section _Header
{
<!-- DataTables CSS -->
<link href="/Areas/admin/Content/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
<!-- DataTables Responsive CSS -->
<link href="/Areas/admin/Content/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">

}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading" style="display: flex; justify-content:center;">
                <p style="font-weight:1000;font-size:large; color: white">Notification Management</p>

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <p style="text-align:right;">
                    <a href="@Url.Action("Create", "welcome_home", new { })" class="btn btn-success" data_modal="">
                        <span class='glyphicon glyphicon-plus'></span> Add notification
                    </a>
                </p>
                <table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:100%">
                    <thead>

                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Link
                            </th>
                            <th>
                                Hide
                            </th>
                            <th>Action</th>
                        </tr>
                    <thead>
                    <tbody>

                        @{var Number = 1; }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.Raw(Number++)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.welcome_title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.link)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.hide)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "welcome_home", new { id = item.welcome_id })" class="btn btn-default" , style="font-size: 10px; padding: 5px 10px;" }>
                                        <span class='glyphicon glyphicon-pencil'></span>
                                    </a>
                                    <a href="@Url.Action("Details", "welcome_home", new { id = item.welcome_id })" class="btn btn-primary" , style="font-size: 10px; padding: 5px 10px;" }>
                                        <span class='glyphicon glyphicon-zoom-in'></span>
                                    </a>
                                    <a href="@Url.Action("Delete", "welcome_home", new { id = item.welcome_id })" class="btn btn-danger" , style="font-size: 10px; padding: 5px 10px;" }>
                                        <span class='glyphicon glyphicon-trash'></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    <tbody>


                </table>
            </div>
        </div>
    </div>
</div>
@section _Footer
{
    <!-- DataTables JavaScript -->
    <script src="/Areas/admin/Content/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/Areas/admin/Content/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/Areas/admin/Content/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
}