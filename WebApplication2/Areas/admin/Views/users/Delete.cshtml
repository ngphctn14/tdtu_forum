@model WebApplication2.Models.user

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@*<h2>Delete</h2>*@

<style>
    .panel-default {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 20px;
    }

    .panel-heading {
        font-size: 1.5rem;
        padding: 15px;
    }

    .dl-horizontal dt {
        font-weight: bold;
    }

    .dl-horizontal dd {
        font-size: 1.2rem;
        color: #555;
    }

    .btn-lg {
        padding: 12px 20px;
        font-size: 1.2rem;
    }

    .text-center {
        text-align: center;
    }

    .mt-4 {
        margin-top: 1.5rem;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary shadow-sm">
            <div class="panel-heading bg-primary text-white">
                <h4 class="m-0 text-center"><strong>Do you really want to delete this user?</strong></h4>
            </div>
            <div class="panel-body">

                <dl class="dl-horizontal">
                    <dt>
                        <strong>Name</strong>
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.full_name)
                    </dd>

                    <dt>
                        <strong>Username</strong>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.username)
                    </dd>

                    <dt>
                        <strong>Password</strong>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.password)
                    </dd>

                    <dt>
                        <strong>Email</strong>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.email)
                    </dd>

                    <dt>
                        <strong>Date created</strong>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.created_at)
                    </dd>

                    <dt>
                        <strong>Last login</strong>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.last_login)
                    </dd>
                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        @Html.ActionLink("Back to list", "Index") |
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
