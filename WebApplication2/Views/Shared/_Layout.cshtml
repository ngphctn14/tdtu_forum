    <script>
        (function($){

            $('.likeBtn').click(function () {
                var userId = @Session["Id"]+"";
                var url = $(this).data('url');
                var postId = $(this).data('id')

                if (userId === 0) {
                    alert("You must log in to like post.");
                    return;
                }

                $.ajax({
                    url: url,
                    type: 'POST',
                    data: {
                        post_id: postId
                    },
                    success: function (result) {
                        if (result.success) {
                            $('.single-question-vote-result').text(result.likeCount + ' Likes');
                            if (result.isLiked) {
                                $('.fa-thumbs-o-up').removeClass('fa-thumbs-o-up').addClass('fa-thumbs-up');
                            } else {
                                $('.fa-thumbs-up').removeClass('fa-thumbs-up').addClass('fa-thumbs-o-up');
                            }
                        } else {
                            alert(result.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('AJAX Error:', xhr.responseText);
                        alert('An error occurred while processing your like.');
                    }
                });
            });

         })(jQuery); 
    </script>

