@model IEnumerable<WebApplication2.Models.post>


@foreach (var i in Model)
{
    <div class="question-type2033">
        <div class="row">
            <div class="col-md-1">
                <div class="left-user12923 left-user12923-repeat">
                    <a href="#"><img src="~/Content/image/images.png" alt="image"> </a>
                    <a href="@Url.Action("Index", "User", new {id = i.user_id})" class="">@i.user.full_name</a>
                </div>
            </div>
            <div class="col-md-9">
                <div class="right-description893">
                    <div id="que-hedder2983">
                        <h3>
                            <a href="@Url.Action("PostDetails", "Post", new { id = i.post_id })" target="_blank">
                                @i.title
                            </a>
                        </h3>
                    </div>
                    <div class="ques-details10018">
                        <p>
                            @if (i.content.Length >= 200)
                            {
                                @($"{i.content.Substring(0, 200)}...")
                            }
                            else
                            {
                                @i.content
                            }
                        </p>
                    </div>
                    <hr>
                    <div class="ques-icon-info3293">
                        <i class="fa fa-clock-o" aria-hidden="true"> @i.created_at</i>
                        <a href="@Url.Action("Index", "Category", new {id = i.category_id})"><i class="fa fa-question-circle-o" aria-hidden="true">&nbsp; @i.category.name</i></a>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="ques-type302">
                    <a href="@Url.Action("PostDetails", "Post", new {id = i.post_id})">

                        <button type="button" class="q-type238"><i class="fa fa-comment" aria-hidden="true"> @i.comments.Count answer</i></button>
                    </a>
                    <a href="#">
                        <button type="button" class="q-type23 button-ques2973"> <i class="fa fa-user-circle-o" aria-hidden="true"> @i.users.Count Likes</i> </button>
                    </a>
                </div>
            </div>
        </div>
    </div>
}


